@model List<ListItem>;

@{
    ViewData["Title"] = "ListItems";
}

<h2>ListItems</h2>
<div class='row'>
    <div class='col-md-12'>
        <button asp-action='CreateListItem' asp-controller="ListItem" class="btn btn-success">Create ListItem</button>
    </div>
</div>
<div class='row'>
    <div class='col-md-12'>
        <table class='table'>
            <thead>
                <tr>
                    <td>Title</td>
                    <td>Category</td>
                    <td>Date</td>
                    <td>Estimate</td>
                    <td>Unit</td>
                    <td>Importance</td>
                    <td>ListId</td>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model) {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Category</td>
                        <td>@item.Date</td>
                        <td>@item.Estimate</td>
                        <td>@item.Unit</td>
                        <td>@item.Importance</td>
                        <td>@item.ListId</td>
                        <td>@ViewBag.UserId</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>